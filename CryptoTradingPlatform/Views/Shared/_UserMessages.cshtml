@using CryptoTradingPlatform.Constants

@if (ViewData[MessageConstants.UnexpectedError] != null)
{
    <script>
        $(function(){
            toastr.error('@ViewData[MessageConstants.UnexpectedError]?.ToString()');
        });
    </script>
}
@if (ViewData[MessageConstants.Success] != null)
{
    <script>
        $(function(){
            toastr.success('@ViewData[MessageConstants.Success]?.ToString()');
        });
    </script>
}
@if (ViewData[MessageConstants.Warning] != null)
{
    <script>
        $(function(){
            toastr.warning('@ViewData[MessageConstants.Warning]?.ToString()');
        });
    </script>
}



@if (TempData[MessageConstants.Success] != null)
{
   <script type="text/javascript">toastr.success("@TempData[MessageConstants.Success]");</script>
}

@if (TempData[MessageConstants.UnexpectedError] != null)
{
   <script type="text/javascript">toastr.error("@TempData[MessageConstants.UnexpectedError]");</script>
}
@if (TempData[MessageConstants.Warning] != null)
{
   <script type="text/javascript">toastr.warning("@TempData[MessageConstants.Warning]");</script>
}