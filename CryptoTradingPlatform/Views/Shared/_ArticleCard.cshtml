@{
    var Articles = (List<ArticleViewModel>)ViewBag.Articles;
}

<div class="card-group mt-5">
    @foreach (var article in Articles)
    {
        <div class="card mb-5">
            <img class="card-img-top" src="/ArticlesImages/@(article.PictureId).jpg" alt="Card image cap">
            <div class="card-body bg-dark">
                <a href="@article.Url"> <h5 class="card-title">Source: @article.Source</h5></a>
                <p class="card-text">@article.Title</p>
                <p class="card-text"><small class="text-muted">@article.DatePublished</small></p>
            </div>
        </div>
    }
</div>