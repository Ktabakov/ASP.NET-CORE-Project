<div class="container">
    <h3 class="text-center font-weight-bold text-white">Swap</h3>
    <div class="offset-md-4 col-md-4 col-sm-12">
        <form method="post">
            <div class="row form-group">
                <div class="col-6">
                    <select class="form-select form-select-lg rounded-pill" aria-label=".form-select-lg example">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>

                </div>
                <div class="col-6">
                    <input type="number" class="form-control-lg rounded-pill border-0" placeholder="Enter Amount">
                </div>
            </div>
            <div class="form-group text-center">
                <i class="bi bi-arrow-down-circle-fill bi-xl" style="font-size:30px"></i>
            </div>
            <div class="row form-group">
