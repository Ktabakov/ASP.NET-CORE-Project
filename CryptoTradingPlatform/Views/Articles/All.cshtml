@model List<ArticleViewModel>

<div class="card-group mt-5">
    @foreach (var article in Model)
    {
        <div class="card mb-5">
            <img class="card-img-top" src="@article.ImageURL" alt="Card image cap">
            <div class="card-body bg-dark">
                <a target="_blank"> <h5 class="card-title">Author: @article.AddedBy</h5></a>
                <p class="card-text">@article.Title</p>
                <p class="card-text">Likes: @article.Likes</p>
                <p class="card-text"><small class="text-muted">@article.DateAdded</small></p>
                <a class="button btn btn-primary rounded-pill"> <i class="text-danger fa-solid fa-heart"></i> Like</a>
                <a class="button btn btn-success rounded-pill">Details</a>
            </div>
        </div>
    }
</div>