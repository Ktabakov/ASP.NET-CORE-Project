@model AddArticleFormModel

@{
    ViewData["Title"] = "Add Article";
}

<div class="container text-white">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h1 class="text-center">Add an article</h1>
            <h2 class="text-center">Share your knowledge with our users!</h2>
            <form method="post">
                <div class="form-group mt-2">
                    <label>Article Title</label>
                    <input asp-for="Title" type="text" class="form-control">
                    <span asp-validation-for="Title" class="small text-danger"></span>
                </div>
                 <div class="form-group mt-2">
                    <label>Image Url</label>
                    <input asp-for="ImageURL" type="text" class="form-control">
                    <span asp-validation-for="ImageURL" class="small text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label>Content</label>
                    <textarea asp-for="Content" class="form-control" rows="12"></textarea>
                    <span asp-validation-for="Content" class="small text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2 rounded-pill">Add</button>
            </form>
        </div>
    </div>
</div>