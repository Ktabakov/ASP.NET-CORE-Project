@using CryptoTradingPlatform.Models.Trading
@model TradingFormModel
@{
    ViewData["Title"] = "Trade Now";
    var Assets = (List<CryptoResponseModel>)ViewBag.Assets;
}

<!--make it a partial view later-->

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://upload.wikimedia.org/wikipedia/commons/8/89/Portrait_Placeholder.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@User.Identity.Name</h5>
                    <p class="card-text">Your current account balance is: <p class="font-weight-bolder">$@ViewBag.UserMoney</p></p>
                    <a href="/Identity/Account/Manage" class="btn btn-primary rounded-pill">Account</a>
                </div>
            </div>
        </div>
        <div class="col">
            <form method="post" asp-controller="Trading" asp-action="Trade">
                <div class="row form-group">
                    <table class="table table-hover text-nowrap mt-4 cryptotable">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Ticker</th>
                                <th scope="col">Supply</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Buy</th>
                                <th scope="col">Sell</th>
                            </tr>
                        </thead>
                        <tbody id="tbody" class="bg-black p-2 text-dark bg-opacity-10 text-white">
                            @foreach (var asset in Assets)
                            {
                                <tr class="cryptotable">
                                    <td>
                                        <picture>
                                            <img src=@asset.Logo alt="logo" width="36" height="36">
                                        </picture>
                                        @asset.Name
                                    </td>
                                    <td class="text-muted">
                                        @asset.Ticker
                                    </td>
                                    <td>
                                        @asset.CirculatingSupply.ToString("N0",new CultureInfo("en-US"))
                                    </td>
                                    <td>
                                        @asset.Price.ToString("C",new CultureInfo("en-US"))
                                    </td>
                                    <td>
                                        <input style="width:100%" step="0.001" type="number" class="rounded-pill"/>
                                    </td>
                                    <td>
                                        <p><input asp-for="Type" value="Buy" type="submit" class="btn btn-success btn btn-block rounded-pill border-0" /></p>
                                    </td>
                                    <td>
                                        <p><input asp-for="Type" value="Sell" type="submit" class="btn btn-danger btn btn-block rounded-pill border-0" /></p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

